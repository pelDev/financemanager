<resources>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="FabActionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="AddBudgetEditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="FixedDeposit">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/custom_ripple_grey</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/bckGround</item>
        <item name="colorOnPrimary">@color/colorPrimaryVariant</item>
        <item name="titleTextAppearance">@style/TextAppearance.FinanceManager.Toolbar</item>
    </style>

    <style name="TextAppearance.FinanceManager.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.FinanceManager.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.FinanceManager.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/colorSecondaryVariant</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="boxBackgroundColor">@color/bckGround</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextAppearance.FinanceManager.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorSecondaryVariant</item>
    </style>

    <style name="Widget.FinanceManager.TextInputLayout.Auth" parent="Widget.FinanceManager.TextInputLayout">
        <item name="hintTextColor">@color/colorPrimaryVariant</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.FinanceManager.TextInputLayout.Auth.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/colorPrimaryVariant</item>
    </style>

    <style name="ActionItem">
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="background">@drawable/custom_ripple_grey</item>
    </style>

</resources>